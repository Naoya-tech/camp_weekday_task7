<h1>Edit posts</h1>
<%= form_with model: @article, local: true do |form| %>
<div>
  <div class="form-group">
    <%= form.label "Title" %>
    <p><%= form.text_field :title, class: "form-control", placeholder: "#{@article.title}" %></p>
  </div>
  <div class="form-group">
    <%= form.label "Body" %>
    <p><%= form.text_area :body, rows: 10, class: "form-control", placeholder: "#{@article.body}" %></p>
  </div>
  <p>
    <%= form.submit 'Update', class: "btn btn-dark btn-block my-4" %>
  </p>
</div>
<% end %>