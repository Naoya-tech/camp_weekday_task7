<h1>Article Detail</h1>
<div class="card">
  <h5 class="card-header"><%= @article.title %></h5>
  <div class="card-body">
    <p><%= simple_format(@article.body) %></p>
    <%= link_to "Articles", articles_path, class: "btn btn-dark mr-3" %>
    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-dark mr-3" %>
    <%= link_to "Delete", article_path(@article), class: "btn btn-dark", method: :delete, data: {confirm: '削除してよろしいですか？'} %>
  </div>
</div>